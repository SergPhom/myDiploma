<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nmedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/divider_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/divider_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.Button.OutlinedButton.LikeShare" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/little_offset</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="android:layout_marginStart">@dimen/little_offset</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="strokeColor">@color/transparent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Menu" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="paddingStart">@dimen/offset</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="android:layout_marginStart">@dimen/little_offset</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="iconGravity">top</item>
    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    
    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
        <item name="color">#FFFFFF</item>
    </style>

    <style name="LittleRoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
        <item name="color">#FFFFFF</item>
    </style>


</resources>